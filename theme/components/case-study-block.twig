{% set hero = post_meta(case_study.ID, 'case-study-hero') %}
{% set case_study = case_study.case_study ?? case_study %}

<pre>
	{{dump(case_study.ID)}}
	{{ dump(list_acf_fields_by_post_id(case_study.ID)) }}
</pre>


<div class="relative max-w-lg mx-auto lg:max-w-none lg:mx-none lg:mb-[280px]">
	<div class="relative w-full h-64 bg-center bg-cover shadow-xl lg:rounded-3xl rounded-t-3xl lg:pt-[46%] lg:w-[90%] lg:h-full">
		<img src={image ?? "https://source.unsplash.com/random/900Ã—700/?fruit"} alt={`${title} case study`} class="absolute inset-0 object-cover object-center w-full h-full lg:rounded-3xl rounded-t-3xl"/>
		<p class="inline-flex items-center justify-center px-6 py-2 mt-4 ml-6 text-xs font-medium tracking-wide text-white rounded-r-full rounded-tl-full bg-gradient-to-r sm:ml-8 lg:hidden from-dark-800 to-dark-900">
			{tag ?? "Enter Tag"}
		</p>
	</div>
	<div class={`relative bottom-0 ${direction && direction === "left" ? "left-0" : "right-0"} z-20 block w-full h-auto p-6 shadow-xl lg:rounded-3xl rounded-b-3xl sm:p-8 lg:p-12 bg-dark-700 lg:absolute lg:-bottom-25 lg:w-[450px] lg:h-full`}>
		<div class="h-full lg:flex lg:flex-col lg:justify-between">
			<div class="hidden lg:block">
				<p class="inline-flex items-center justify-center px-6 py-2 text-xs font-medium tracking-wide text-white rounded-r-full rounded-tl-full bg-gradient-to-r from-dark-800 to-dark-900">
					{tag ?? "Enter Tag"}
				</p>
			</div>
			<div class="flex flex-wrap w-full flex-col">
				<h3 class="text-3xl font-bold text-white lg:text-4xl">{title ?? "Enter Title"}</h3>
				<p class="mt-2 text-base lg:mt-4 text-dark-300 md:text-lg">{text ?? "Enter Text"}</p>
			</div>
			<div class="mt-8 xl:mt-4 flex gap-3">
				<ButtonSolidRound class="mb-3 max-w-[fit-content]" url={site} text="View Website"/>
				<ButtonAnimated text="Case Study" url={url}/>
			</div>
		</div>
	</div>
</div>
