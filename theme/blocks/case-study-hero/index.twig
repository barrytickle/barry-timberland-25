{% set featured_image = post.thumbnail.src %}

{% set stats = fields.stats %}

<section class="px-4 py-12 md:py-16 sm:px-6 lg:px-8">
	<div class="max-w-screen-xl mx-auto">
		<div class="w-full max-w-3xl mx-auto text-center lg:max-w-5xl">
			<p class="inline-flex items-center justify-center px-6 py-2 text-sm font-medium tracking-wide text-white rounded-r-full rounded-tl-full bg-gradient-to-r from-dark-600 to-dark-700">Case study</p>
			<h1 class="mt-4 text-4xl font-extrabold text-white md:mt-5 sm:text-5xl md:text-6xl">{{post.post_title}}</h1>
		</div>
		<div class="flex flex-wrap w-full mx-auto mt-6 text-center">
			<div class="w-full mx-auto lg:w-4/5">
				<p class="text-2xl font-medium tracking-tight text-white sm:text-3xl lg:text-4xl lg:leading-tight">{{fields.page_description}}
				</p>
			</div>
		</div>
		<div class="grid w-full max-w-lg gap-10 mx-auto mt-12 lg:grid-cols-3 lg:gap-x-12 lg:mt-16 lg:max-w-none">
			<div class="w-full">
				<h3 class="mt-5 text-2xl font-semibold text-center text-white">Website</h3>
				<p class="mt-2 text-lg leading-relaxed text-center text-dark-300 hover:underline">
					<a href="{{stats.website.url}}" target="_blank">{{stats.website.title}}</a>
				</p>
			</div>
			<div class="w-full">
				<h3 class="mt-5 text-2xl font-semibold text-center text-white">Date</h3>
				<p class="mt-2 text-lg leading-relaxed text-center text-dark-300">{{stats.date}}</p>
			</div>
			<div class="w-full">
				<h3 class="mt-5 text-2xl font-semibold text-center text-white">Technology</h3>
				<p class="mt-2 text-lg leading-relaxed text-center text-dark-300">{{stats.technologies}}/p></p>
			</div>
		</div>
		<div class="mx-auto mt-12 shadow-xl rounded-3xl lg:mt-16 aspect-w-2 aspect-h-1"><img class="inset-0 object-cover object-center w-full align-middle rounded-3xl h-[640px]" src="{{featured_image}}" alt="{{post.thumbnail.alt}}"></div>
	</div>
</section>
