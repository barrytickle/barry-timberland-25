{% set tag = fields.tag %}
{% set title = fields.title %}
{% set text = fields.text %}

<div class="w-full portfolio-wrapper text-4xl text-white max-w-screen-xl mx-auto font-light mb-8" data-block="large-text">
	<section class="px-4 py-12 md:py-16 sm:px-6 lg:px-8">
		<div class="max-w-screen-md mx-auto text-center lg:max-w-screen-xl">
			<p class="inline-flex items-center justify-center px-6 py-2 text-sm font-medium tracking-wide text-white rounded-r-full rounded-tl-full bg-gradient-to-r from-dark-600 to-dark-700">{{tag}}</p>
			<h2 class="text-6xl font-extrabold mb-8 mt-6">{{title}}</h2>
			<div class="flex flex-wrap w-full mx-auto mt-6 text-center">
				<div class="w-full mx-auto lg:w-4/5">
					<p class="text-2xl text-dark-300 font-light tracking-tight sm:text-3xl lg:text-4xl lg:leading-tight text-left">{{text}}</p>
				</div>
			</div>
		</div>
	</section>
</div>
