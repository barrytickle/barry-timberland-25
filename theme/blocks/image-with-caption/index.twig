{% set image = fields.image %}
{% set caption = fields.caption %}

<section class="px-4 py-12 mx-auto md:py-16 sm:px-6 lg:px-8 max-w-4xl">
	<div class="flex flex-col justify-between ">
		<img src="{{image.sizes.large}}" alt="{{image.alt}}" class="max-h-[560px] rounded-3xl object-cover object-top">
		<p class="text-white centered text-[28px] items-center font-normal mt-12 ">{{caption}}</p>
	</div>
</section>
