{% set tag = fields.tag %}
{% set title = fields.title %}
{% set tools = fields.tools %}

<section class="max-w-4xl px-4 pt-12 pb-10 mx-auto md:pb-12 md:pt-16 sm:px-6 lg:px-8">
	<p class="inline-flex items-center justify-center px-6 py-2 text-sm font-medium tracking-wide text-white rounded-r-full rounded-tl-full bg-gradient-to-r from-dark-600 to-dark-700">{{tag}}</p>
	<h2 class="text-6xl font-extrabold mt-4 mb-8 text-white">{{title}}</h2>
	<div class="max-w-4xl mx-auto">
		{% for tool in tools %}
			<a class="bg-dark-800 rounded-xl py-4 px-6 mb-4 group cursor-pointer flex justify-between items-center hover:bg-dark-700 duration-200" href="{{tool.link}}" target="_blank">
				<div class="flex">
					<div class="w-16 mr-8"><img src="{{tool.icon.url}}" class="max-w-16 w-full max-h-16 object-contain object-center" alt="{{tool.label}} icon"></div>
					<div class="flex flex-col justify-center">
						<h3 class="text-white text-xl">{{tool.label}}</h3>
						<span class="text-md text-dark-500 text-light">{{tool.description}}</span>
					</div>
				</div>
				<div class="rounded-full border border-dark-200 justify-center items-center h-[50px] w-[50px] -rotate-45 group-hover:rotate-0 duration-200 hidden md:flex">
					<svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 448 512">
						<path fill="#ffffff" d="M438.6 278.6c12.5-12.5 12.5-32.8 0-45.3l-160-160c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L338.8 224 32 224c-17.7 0-32 14.3-32 32s14.3 32 32 32l306.7 0L233.4 393.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0l160-160z"></path>
					</svg>
				</div>
			</a>
		{% endfor %}
	</div>
</section>
